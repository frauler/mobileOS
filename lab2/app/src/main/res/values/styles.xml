<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedButtonStyle">
        <item name="backgroundTint">#96E4DB</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">2dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">50dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">90dp</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="backgroundTint">#96E4DB</item>
        <item name="backgroundTintMode">add</item>
        <item name="fontFamily">monospace</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ControlButtons">
        <item name="backgroundTint">#96E4DB</item>
        <item name="backgroundTintMode">add</item>
        <item name="fontFamily">monospace</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">30dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">-8dp</item>
        <item name="android:textColor">#000</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ScoreStyle">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>